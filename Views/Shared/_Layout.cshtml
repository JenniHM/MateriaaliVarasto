<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-warning navbar-dark">
        <div class="container-fluid">
            <a class=" navbar-brand" href="#">Kulissit kuntoon!  (@ViewBag.LoggedStatus)</a>


            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Ohjelma", "index", "home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Kirjautuminen", "login", "home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("kirjaudu ulos", "login", "home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Ohjeet", "about", "home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Tuotteet", "index", "product", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("materiaalit", "index", "materials", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>

                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="hae">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">haku</button>
                    </form>

                </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>
