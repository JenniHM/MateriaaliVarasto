<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>*@
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{ 
        if (Session["UserName"] == null)
        {
            Html.RenderPartial("_NavbarLoggedOut");
        }else
        {
            Html.RenderPartial("_NavbarLoggedIn");
        }
    }
   
    <div class="container-fluid">
        @RenderBody()
    </div>  
    
        <footer class="oma-footer">
            @using System.Globalization
            @{ 
                string loggausInfo = "";
                if (Session["UserName"] == null) {
                    loggausInfo = "Et ole kirjautuneena järjestelmään";
                } else {
                    loggausInfo = "Olet kirjautuneena käyttäjänä: " + Session["UserName"];
                }
            }
            <p>&copy; Kulissit kuntoon -järjestelmä. @loggausInfo . Tänään on @DateTime.Today.ToString("D", CultureInfo.CreateSpecificCulture("fi-FI")) </p>
        </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)



</body>
</html>
