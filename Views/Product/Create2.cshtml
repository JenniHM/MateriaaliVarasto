@model MateriaaliVarasto.Models.Tuotteet

@{
    ViewBag.Title = "Create2";
    ViewBag.Adding = "Etkö löydä listasta etsimääsi?";
}
@section scripts {
    <script type="text/javascript">
        $(window).on('load', function () {
                $('#kuvaRuutu').modal('show');
        });
    </script>
}

@using (Html.BeginForm("Create2", "Product", FormMethod.Post, new {enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Lisää uusi tuote:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Tuotenimi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tuotenimi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tuotenimi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ValmistajaID, "Valmistaja (valitse listasta)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ValmistajaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ValmistajaID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        @ViewBag.Adding
    </div>
    <div>
        <button type="button" name="btnMat" class="btn btn-warning">Lisää uusi valmistaja</button>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RyhmäID, "Tuoteryhmä (valitse listasta)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("RyhmäID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RyhmäID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MateriaaliID, "Materiaali (valitse listasta)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MateriaaliID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MateriaaliID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        @ViewBag.Adding
    </div>
    <div>
        <button type="button" name="btnMat" class="btn btn-warning">Lisää uusi materiaali</button>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Määrä, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Määrä, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Määrä, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Pesty, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Pesty)
                @Html.ValidationMessageFor(model => model.Pesty, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ImageLink, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ImageLink)
                @Html.ValidationMessageFor(model => model.ImageLink, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Kuva, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="ImageFile" required />
        </div>
    </div>
  
</div>
  
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tallenna" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Takaisin tuotteisiin", "Index")
</div>
