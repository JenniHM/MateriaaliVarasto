@model IEnumerable<MateriaaliVarasto.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}

<h2>Tuotteita varastossa  (Index)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Tuotenimi)</th>
        <th>@Html.DisplayNameFor(model => model.Pesty)</th>
        <th>@Html.DisplayNameFor(model => model.Määrä)</th>
        <th>@Html.DisplayNameFor(model => model.ImageLink)</th>
        <th>@Html.DisplayNameFor(model => model.Materiaalit.Materiaali)</th>
        <th>@Html.DisplayNameFor(model => model.Ryhmät.Ryhmä)</th>
        <th>@Html.DisplayNameFor(model => model.Valmistajat.Valmistaja)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Tuotenimi)</td>
        <td>@Html.DisplayFor(modelItem => item.Pesty)</td>
        <td>@Html.DisplayFor(modelItem => item.Määrä)</td>
        <td>@Html.DisplayFor(modelItem => item.ImageLink)</td>
        <td>@Html.DisplayFor(modelItem => item.Materiaalit.Materiaali)</td>
        <td>@Html.DisplayFor(modelItem => item.Ryhmät.Ryhmä)</td>
        <td>@Html.DisplayFor(modelItem => item.Valmistajat.Valmistaja)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TuoteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TuoteID })
        </td>
    </tr>
}

</table>
