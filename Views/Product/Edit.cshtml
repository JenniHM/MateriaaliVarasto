@model MateriaaliVarasto.Models.Tuotteet

@{
    ViewBag.Title = "Edit";
}
@section scripts{
<script type="text/javascript">
        $(function () {
            $("getValId").click(function () {
                let valmId = $(this).data("valmid");
                console.log("Klikkasit tuotenumeroa: " + valmId);
                var url = "/Product/_ModalEdit/?id=" + valmId;
                console.log(url);

                $("#valmEdit").append(" <b>Avataan tuotteen " + valmId + " muokkausikkuna...</b>");

                var $detailDivEdit = $("#valmEdit");
                $.get(url, function (data) {
                    $detailDivEdit.replaceWith(data);
                    $('ModalValmEdit').modal('show');
                });
            });
        });
    </script>
}
