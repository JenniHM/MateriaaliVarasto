@model MateriaaliVarasto.Models.Logins

@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script type="text/javascript">
        $(window).on('load', function () {
            if (@ViewBag.LoginError == 1) {
                $('#LoginRuutu').modal('show');
            }
        });
    </script>
}


<div class="container mt-3">
    <div>
        <h1>Käsityöt - elämämme eliksiiri</h1>

        <img class="mx-auto d-block" src="~/Images/fabrics.jpg" alt="Colourful fabrics" />
    </div>
</div>

@{
    Html.RenderPartial("_LoginModal");
}