@model MateriaaliVarasto.Models.Logins

@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script type="text/javascript">
        $(window).on('load', function () {
            if (@ViewBag.LoginError == 1) {
                $('#LoginRuutu').modal('show');
            }
        });
    </script>
}


<div class="jumbotron">
    <h2>Tähän voisi upottaa kauniin kuvan?</h2>
    
    <img src="~/Images/fabrics.jpg" alt="Colourful fabrics" width="1200" height="300" />
</div>

@{
    Html.RenderPartial("_LoginModal");
}